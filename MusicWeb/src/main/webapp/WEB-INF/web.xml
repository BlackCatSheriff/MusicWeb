<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>MusicWeb</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>team.musicweb.servlet.UserServlet</servlet-class>
		<init-param>
			<description>用户集合</description>
			<param-name>UserCollection</param-name>
			<param-value>users</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>MusicServlet</servlet-name>
		<servlet-class>team.musicweb.servlet.MusicServlet</servlet-class>
		<init-param>
			<description>音乐集合</description>
			<param-name>MusicCollection</param-name>
			<param-value>musics</param-value>
		</init-param>
		<init-param>
			<description>歌单集合</description>
			<param-name>MusicsheetCollection</param-name>
			<param-value>musicsheets</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>MusicsheetServlet</servlet-name>
		<servlet-class>team.musicweb.servlet.MusicsheetServlet</servlet-class>
		<init-param>
			<description>歌单集合</description>
			<param-name>MusicsheetCollection</param-name>
			<param-value>musicsheets</param-value>
		</init-param>
		<init-param>
			<description>用户集合</description>
			<param-name>UserCollection</param-name>
			<param-value>users</param-value>
		</init-param>
		<init-param>
			<description>音乐集合</description>
			<param-name>MusicCollection</param-name>
			<param-value>musics</param-value>
		</init-param>
		<init-param>
			<description>评论集合</description>
			<param-name>CommentCollection</param-name>
			<param-value>comments</param-value>
		</init-param>
		<init-param>
			<description>瀑布流每页数据量</description>
			<param-name>PerSize</param-name>
			<param-value>2</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/api/user/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MusicsheetServlet</servlet-name>
		<url-pattern>/api/musicsheet/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MusicServlet</servlet-name>
		<url-pattern>/api/music/*</url-pattern>
	</servlet-mapping>
	<error-page>
		<error-code>404</error-code>
		<location>/404.html</location>
	</error-page>
	<session-config>
		<session-timeout>900</session-timeout>
	</session-config>
	<context-param>
		<description>数据库名称</description>
		<param-name>DatabaseName</param-name>
		<param-value>musicweb</param-value>
	</context-param>

	<context-param>
		<description>Music File Path on Server</description>
		<param-name>MusicFilePath</param-name>
		<param-value>/upload/musics/</param-value>
	</context-param>

	<context-param>
		<description>Picture File Path on Server</description>
		<param-name>PictureFilePath</param-name>
		<param-value>/upload/pictures/</param-value>
	</context-param>

	<filter>
		<description>设置Request和Response编码方式</description>
		<display-name>字符编码过滤器</display-name>
		<filter-name>CharsetFilter</filter-name>
		<filter-class>team.musicweb.filter.CharsetFilter</filter-class>
		<init-param>
			<description>编码方式</description>
			<param-name>Encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter>
		<description>请求权限过滤</description>
		<display-name>权限过滤器</display-name>
		<filter-name>PowerCheckFilter</filter-name>
		<filter-class>team.musicweb.filter.PowerCheckFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>CharsetFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>

 	<filter-mapping>
		<filter-name>PowerCheckFilter</filter-name>
		<servlet-name>MusicServlet</servlet-name>
		<url-pattern>/api/user/editInfo</url-pattern>
		<url-pattern>/api/musicsheet/publishComment</url-pattern>
		<url-pattern>/api/musicsheet/delete</url-pattern>
		<url-pattern>/api/musicsheet/create</url-pattern>
		<url-pattern>/api/musicsheet/getInfo</url-pattern>
		<url-pattern>/api/musicsheet/removeComment</url-pattern>
	</filter-mapping> 

</web-app>